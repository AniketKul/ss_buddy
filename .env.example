# Smart Study Buddy Assistant - Environment Configuration

# NVIDIA API Configuration
# Get your API key from: https://build.nvidia.com/explore/discover
# Make sure to sign up and generate an API key from the NVIDIA API Catalog
NVIDIA_API_KEY=your-nvidia-api-key-here

# Application Configuration
SECRET_KEY=study-buddy-secret-key-change-in-production
FLASK_ENV=development
DEBUG=True

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Optional: Advanced Configuration
# Uncomment and modify these if needed

# Request timeout (seconds)
# REQUEST_TIMEOUT=30

# Maximum tokens per request
# MAX_TOKENS_LIMIT=4096

# Cost tracking settings
# ENABLE_COST_TRACKING=True
# COST_ALERT_THRESHOLD=10.0

# Logging level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Session settings
# SESSION_TIMEOUT=3600

# Model routing settings (advanced users only)
# FORCE_MODEL=nvdev/meta/llama-3.2-3b-instruct  # Force specific model for testing
# DISABLE_ROUTING=False  # Disable intelligent routing

# Performance settings
# ENABLE_CACHING=True
# CACHE_TTL=300

# Security settings
# RATE_LIMIT_PER_MINUTE=60
# ENABLE_CORS=True

# Development settings
# MOCK_API_RESPONSES=False  # Use mock responses for testing without API calls 